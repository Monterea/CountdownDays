<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F8F4DA"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="0"
        android:paddingTop="0px"
        android:textStyle="bold"
        android:textSize="55sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDays" />
    <TextView
		android:text="days until Halloween"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="10sp"
		android:gravity="center_horizontal"
			android:layout_margin="10dp"
		android:id="@+id/textViewDescription" />

    <RadioGroup
        android:minWidth="25px"
        android:minHeight="15px"
        android:paddingTop="0px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup1">
        <RadioButton
            android:textSize="20sp"
           android:textStyle="bold"
            android:layout_marginLeft="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Mezinárodní den dětí"
            android:id="@+id/radioButtonKidsDay" />
        <RadioButton
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halloween"
            android:id="@+id/radioButtonHalloween" />
        <RadioButton
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vánoce"
            android:id="@+id/radioButtonChristmas" />
        <TextView
            android:text="Daniel"
            android:paddingTop="5px"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#1932BA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1">
            <RadioButton
                android:id="@+id/radioButtonDanielBirthday"
                android:text="Narozeniny"
                android:textSize="15sp"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <RadioButton
                android:id="@+id/radioButtonDanielNameDay"
                android:text="Svátek"
                android:textSize="15sp"
                android:layout_marginLeft="450px"
                android:layout_marginRight="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

        </RelativeLayout>

        <TextView
            android:text="Matěj"
            android:paddingTop="5px"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#1932BA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2">
            <RadioButton
                android:id="@+id/radioButtonMatejBirthday"
                android:text="Narozeniny"
                android:textSize="15sp"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <RadioButton
                android:id="@+id/radioButtonMatejNameDay"
                android:text="Svátek"
                android:textSize="15sp"
                android:layout_marginLeft="450px"
                android:layout_marginRight="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

        </RelativeLayout>

        <TextView
            android:text="Jiřík"
            android:paddingTop="5px"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#1932BA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="15px"
            android:paddingBottom="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3">
            <RadioButton
                android:id="@+id/radioButtonJiriBirthday"
                android:text="Narozeniny"
                android:textSize="15sp"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <RadioButton
                android:id="@+id/radioButtonJiriNameDay" 
                android:text="Svátek"
                android:textSize="15sp"
                android:layout_marginLeft="450px"
                android:layout_marginRight="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

   
        
        <RadioButton
            android:id="@+id/radioButtonOther"
            android:textSize="18sp"
            android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Napiš vlastní datum (ve tvaru dd.mm.rrrr) :"           
            android:textColor="#1932BA"
			 />
 </RadioGroup>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputCustomDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
        />
    
            <Button
        android:id="@+id/buttonCountDays"
        android:text="SPOČÍTEJ VLASTNÍ DATUM"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50px"
        android:background="#1932BA"
         />
</LinearLayout>